{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "allowJs": false,
    "strict": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": "./src/",
    "paths": {
      "tests/*": ["./../__tests__/*"],
      "*": ["./*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
