{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "target": "es2018",
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "include": ["src/**/*", "scripts/**/*", "database/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
